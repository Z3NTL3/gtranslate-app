{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GTranslate",
  "identifier": "com.gtranslate.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": [
      "../dist",
      "../src",
      "./icons/glogo.png"
    ]
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GTranslate",
        "width": 360,
        "height": 620,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "visible": false,
        "decorations": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "create": true,
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "publisher": "z3ntl3",
    "license": "GPLv3",
    "homepage": "https://github.com/z3ntl3/gtranslate-app",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/glogo.png",
      "icons/glogo.ico"
    ],
    "resources": {
      "../src/app.log": "app.log/app.log",
      "../src/assets/app-conf.json": "app-conf.json"
    }, 
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE1RjIxMEJFODY4MTFEQjEKUldTeEhZR0d2aER5RlRmUW9zdnBTY1ZQdjhIT0JMeWdOS2Y5a0pEZ2xVblA2enpodWVWK2R1Y2sK",
      "endpoints": ["https://github.com/Z3NTL3/gtranslate-app/releases/latest/download/latest.json"] 
    },
    "windows": {
        "installMode": "passive"
    }
  }
}
