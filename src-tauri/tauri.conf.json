{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GTranslate",
  "version": "0.1.0",
  "identifier": "com.gtranslate.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": [
      "../dist",
      "../src"
    ]
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GTranslate",
        "width": 360,
        "height": 620,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "visible": false,
        "decorations": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "create": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "publisher": "z3ntl3",
    "license": "GPLv3",
    "homepage": "https://github.com/z3ntl3/gtranslate-app",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/glogo.png",
      "icons/glogo.ico"
    ],
    "resources": {
      "../src/assets/app-conf.json": "app-conf.json"
    }
  }
}
